{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./build",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*", "types/**/*"]
}
